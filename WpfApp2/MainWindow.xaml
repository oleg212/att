        <Button Content="disconnect" HorizontalAlignment="Left" Margin="406,362,0,0" VerticalAlignment="Top" Height="42" Width="96" IsDefault="True" FontSize="16" FontWeight="Bold" Click="Button_Click_2"/>
        <Label x:Name="flag" Content="0" HorizontalAlignment="Left" Margin="784,408,0,0" VerticalAlignment="Top" IsEnabled="False"/>

